<Window x:Class="D_Accounting.WriteDataFilePathDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Choose new data file path" Height="200" Width="700">
    <Grid>
        <StackPanel>
            <TextBlock FontStyle="Italic" Style="{StaticResource Default_TextBlock_Style}" Text="Current data file path :"/>
            <TextBlock Style="{StaticResource Default_TextBlock_Style}" Text="{Binding Source={StaticResource mMainViewModel}, Path=DataFilePath}"/>
            <Separator/>
            <TextBlock FontStyle="Italic" Style="{StaticResource Default_TextBlock_Style}" Text="Choose a new one :"/>
            <Button Style="{StaticResource Default_Button_Style}" HorizontalAlignment="Left" Click="Click_Button_OpenFileChooser">
                <TextBlock Style="{StaticResource ButtonContent_TextBlock_Style}" Text="Select a new file"/>
            </Button>
        </StackPanel>
    </Grid>
</Window>
